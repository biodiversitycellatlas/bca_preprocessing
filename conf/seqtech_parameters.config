/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for sequencing technique - specific parameters
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Can be used by any config that customises the base path using:
        $params.seqTechs / --seqTechs
----------------------------------------------------------------------------------------
*/

params {
    sequencing_techniques {
        
        '10xv3' {
            bc_whitelist =          "https://teichlab.github.io/scg_lib_structs/data/10X-Genomics/3M-3pgex-may-2023.txt.gz"
            soloType =              "CB_UMI_Simple"
            soloCBstart =           "--soloCBstart 1"
            soloCBlen =             "--soloCBlen 16"
            soloUMIstart =          "--soloUMIstart 17"
            soloUMIlen =            "--soloUMIlen 10"
            soloCBmatchWLtype =     "--soloCBmatchWLtype 1MM_multi_Nbase_pseudocounts"
            clipAdapterType =       "--clipAdapterType CellRanger4"
        }

        'oak_seq' {
            bc_whitelist   =        "https://teichlab.github.io/scg_lib_structs/data/10X-Genomics/3M-3pgex-may-2023.txt.gz"
            soloType =              "CB_UMI_Simple"
            soloCBstart =           "--soloCBstart 1"
            soloCBlen =             "--soloCBlen 16"
            soloUMIstart =          "--soloUMIstart 17"
            soloUMIlen =            "--soloUMIlen 10"
            soloCBmatchWLtype =     "--soloCBmatchWLtype 1MM_multi_Nbase_pseudocounts"
            clipAdapterType =       "--clipAdapterType CellRanger4"
        }

        'parse_biosciences' {
            bc_whitelist_splitwells = "../assets/ParseBio_bwl_n26_R1_v3_4.txt"
            bc_whitelist =          "../assets/ParseBio_bwl_R3.txt ../assets/ParseBio_bwl_R2.txt ../assets/ParseBio_bwl_R1.txt"
            soloType =              "CB_UMI_Complex"
            soloCBposition =        "--soloCBposition 0_50_0_57 0_30_0_37 0_10_0_17"
            soloUMIposition =       "--soloUMIposition 0_0_0_9"
            soloCBmatchWLtype =     "--soloCBmatchWLtype 1MM"
            clipAdapterType =       "--clipAdapterType CellRanger4"
        }

        'bd_rhapsody' {
            bc_whitelist =          "../assets/BDrhap_bwl_R1.txt ../assets/BDrhap_bwl_R2.txt ../assets/BDrhap_bwl_R3.txt"
            soloType =              "CB_UMI_Complex"
            soloCBposition =        "--soloCBposition 0_0_0_8 0_13_0_21 0_26_0_34"
            soloUMIposition =       "--soloUMIposition 0_35_0_42"
            outFilterScoreMinOverLread = "--outFilterScoreMinOverLread 0"
            outFilterMatchNminOverLread = "--outFilterMatchNminOverLread 0"
            outFilterMultimapScoreRange = "--outFilterMultimapScoreRange 0"
            clip3pAdapterSeq =      "--clip3pAdapterSeq AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            seedSearchStartLmax =   "--seedSearchStartLmax 50"
            outFilterMatchNmin =    "--outFilterMatchNmin 25"
            limitOutSJcollapsed =   "--limitOutSJcollapsed 2000000"
            soloCBmatchWLtype =     "--soloCBmatchWLtype 1MM"
        }
    }
}
