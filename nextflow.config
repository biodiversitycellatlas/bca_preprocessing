nextflow.enable.dsl = 2

conda {
    enabled = true
    // Set the conda create timeout to verify environment being used for each process
    createTimeout = '1h' 
}

/* Define profiles for config files
 * Nextflow requires the custom config files to be 
 * defined in the nextflow.config file as a profile, 
 * to be able to reference the params in this file.
*/
profiles {
    slurm {
        process {
            queue = 'genoa64'
            executor = "slurm"
            clusterOptions = '--qos=short'
        }
    }
     '240810_ParseBio_Nvec_BCA1_BCA2' {
        includeConfig 'config/240810_ParseBio_Nvec_BCA1_BCA2.config'
    }
    '240810_ParseBio_Nvec_BCA3_BCA4' {
        includeConfig 'config/240810_ParseBio_Nvec_BCA3_BCA4.config'
    }
    '240810_ParseBio_Tcas' {
        includeConfig 'config/240810_ParseBio_Tcas.config'
    }
    '241106_BD_Rhapsody_Nvec' {
        includeConfig 'config/241106_BD_Rhapsody_Nvec.config'
    }
    '241204_ParseBio_Nvec_nuclei' {
        includeConfig 'config/241204_ParseBio_Nvec_nuclei.config'
    }
    '241204_ParseBio_Tcas_nuclei' {
        includeConfig 'config/241204_ParseBio_Tcas_nuclei.config'
    }
    '250115_ParseBio_Nvec_BCA1_BCA2' {
        includeConfig 'config/250115_ParseBio_Nvec_BCA1_BCA2.config'
    }
    '250115_ParseBio_Nvec_BCA3_BCA4' {
        includeConfig 'config/250115_ParseBio_Nvec_BCA3_BCA4.config'
    }
    '250115_ParseBio_Nvec_BCA9_BCA10' {
        includeConfig 'config/250115_ParseBio_Nvec_BCA9_BCA10.config'
    }
    '250115_ParseBio_Pliv_BCA11_BCA12' {
        includeConfig 'config/250115_ParseBio_Pliv_BCA11_BCA12.config'
    }
    '250115_ParseBio_Pliv_BCA13_BCA14' {
        includeConfig 'config/250115_ParseBio_Pliv_BCA13_BCA14.config'
    }
    '250115_ParseBio_Nvec_BCA13_BCA14' {
        includeConfig 'config/250115_ParseBio_Nvec_BCA13_BCA14.config'
    }
    '250115_ParseBio_Nvec_nuclei_BCA15_BCA16' {
        includeConfig 'config/250115_ParseBio_Nvec_nuclei_BCA15_BCA16.config'
    }
    '250115_ParseBio_Tcas_BCA3_BCA4' {
        includeConfig 'config/250115_ParseBio_Tcas_BCA3_BCA4.config'
    }
    '250115_ParseBio_Tcas_nuclei_BCA15_BCA16' {
        includeConfig 'config/250115_ParseBio_Tcas_nuclei_BCA15_BCA16.config'
    }
    '250115_ParseBio_Cele_nuclei_BCA15_BCA16' {
        includeConfig 'config/250115_ParseBio_Cele_nuclei_BCA15_BCA16.config'
    }
    '250221_OAKseq_Nvec' {
        includeConfig 'config/250221_OAKseq_Nvec.config'
    }
}


/* Basic parameters
 * The following parmeters must either be specified in the first line of this chunk, 
 * or as instructed, in a parameter file in the /config folder: 
 * - baseDir:   directory where the bca_preprocessing code is located
 * - resDir:   data directory, in which the fastq files and the references are present. 
 * - seqTech:   sequencing technique, at the moment only 'parse_biosciences', 'bd_rhapsody', 'oak_seq' are supported
 */ 
params {
    barcodeDir = "${params.baseDir}/seq_techniques/${params.seqTech}/barcodes_R1.txt \
                  ${params.baseDir}/seq_techniques/${params.seqTech}/barcodes_R2.txt \
                  ${params.baseDir}/seq_techniques/${params.seqTech}/barcodes_R3.txt"

    star_config_mkref = "${params.baseDir}/seq_techniques/${params.seqTech}/config_${params.seqTech}_starsolo_mkref.txt"
    star_config = "${params.baseDir}/seq_techniques/${params.seqTech}/config_${params.seqTech}_starsolo.txt"

    // Extract version name from GTF file
    gtf_name = new File(params.ref_star_gtf).name.replaceFirst(/\.gtf$/, '')
}


process {
    conda = "${params.conda_installation}/envs/bca_env"
    cache = 'lenient'
    queue = 'genoa64'
    executor = "slurm"

    // Default resources
    stageInMode = 'symlink'
    stageOutMode = 'move'
    clusterOptions = '--qos=short'
    cpus = '1'
    memory = 6.GB
    time = '3h'

    // Process-specific resources
    withName: 'DEMUX_UMITOOLS_*' {
        clusterOptions = '--qos=short'
        cpus = 4
        memory = 20.GB
        time = '3h'
    }

    withName: 'KRAKEN' {
        conda = "${params.baseDir}/env/kraken_env.yml"
        clusterOptions = '--qos=shorter'
        memory = 48.GB
        cpus = 4
        time = '2h'
    }

    // Process-specific resources: parse_workflow()
    withName: 'PARSEBIO_PIPELINE_DEMUX' {
        clusterOptions = '--qos=shorter'
        cpus = 1
        memory = 20.GB
        time = '2h'
    }

    withName: 'PARSEBIO_PIPELINE_MKREF' {
        conda = "${params.baseDir}/env/spipe_env.yml"
        clusterOptions = '--qos=shorter'
        cpus = 1
        memory = 20.GB
        time = '2h'
    }

    withName: 'PARSEBIO_PIPELINE' {
        conda = "${params.baseDir}/env/spipe_env.yml"
        clusterOptions = '--qos=short'
        cpus = 4 
        time = '5h' 
        memory = '32 GB' 
    }


    // Process-specific resources: bd_rhapsody_workflow()
    withName: 'RM_VARBASES' {
        clusterOptions = '--qos=short'
        memory = 32.GB
        time = '5h'
    }

    withName: 'BDRHAP_PIPELINE_MKREF' {
        conda = "${params.baseDir}/env/bd_pipe_env.yml"
        clusterOptions = '--qos=shorter'
        cpus = 1
        memory = 24.GB
        time = '2h'
    }

    withName: 'BDRHAP_PIPELINE' {
        conda = "${params.baseDir}/env/bd_pipe_env.yml"
        clusterOptions = '--qos=normal'
        cpus = 4
        memory = 86.GB
        time = '10h'
    }

    // Process-specific resources: oak_seq_workflow()
    withName: 'CR_PIPELINE_MKREF' {
        clusterOptions = '--qos=shorter'
        cpus = 1
        memory = 24.GB
        time = '1h'
    }

    withName: 'CR_PIPELINE' {
        clusterOptions = '--qos=normal'
        cpus = 4
        memory = 32.GB
        time = '7h'
    }

    // Process-specific resources: QC_mapping_workflow()
    withName: 'GENINDEX_STARSOLO' {
        clusterOptions = '--qos=shorter'
        cpus = 4
        memory = 64.GB
        time = '2h'
        ext.args = { params.annot_type == 'GFF' ? '--sjdbGTFtagExonParentTranscript mRNA' : '' }
    }

    withName: 'MAPPING_STARSOLO' {
        clusterOptions = { (params.seqTech == 'bd_rhapsody' || params.seqTech == 'oak_seq') ? '--qos=vlong' : '--qos=short' }
        memory = { (params.seqTech == 'bd_rhapsody' || params.seqTech == 'oak_seq') ? '112 GB' : '32 GB' }
        cpus = { (params.seqTech == 'bd_rhapsody' || params.seqTech == 'oak_seq') ? 8 : 4 }
        time = { (params.seqTech == 'bd_rhapsody' || params.seqTech == 'oak_seq') ? '28h' : '5h' }
        ext.args = { (params.seqTech == 'bd_rhapsody' || params.seqTech == 'oak_seq') ? '--limitBAMsortRAM 7485893740' : '' }
    }

    withName: 'GENINDEX_ALEVIN' {
        conda = "${params.baseDir}/env/alevin_env.yml"
        clusterOptions = '--qos=short'
        cpus = 1
        memory = 24.GB
        time = '2h'
    }

    withName: 'MAPPING_ALEVIN' {
        conda = "${params.baseDir}/env/alevin_env.yml"
        clusterOptions = '--qos=short'
        cpus = 4
        memory = 32.GB
        time = '3h'
    }

    withName: 'GENE_EXT' {
        conda = "${params.conda_installation}/envs/geneext"
        clusterOptions = '--qos=shorter'
        memory = 64.GB
        cpus = 4
        time = '2h'
    }

    // Process-specific resources: filtering_workflow()
    withName: 'CELLBENDER' {
        conda = "${params.baseDir}/env/cellbender_env.yml"
        clusterOptions = '--qos=long'
        memory = 32.GB
        time = '16h'
    }
}


// Automatically removes work directories of succesful jobs to reduce storage
// cleanup = true

// Manifest
manifest {
    name = 'BCA Pre-processing Pipeline'
    author = 'Bonita van Waardenburg'
    description = 'Biodiversity Cell Atlas Pre-processing Pipeline'
    version = '1.0.0'
    nextflowVersion = '>=21.04.0'
}


/* Execution reports
 * report: 	creates execution report, including summary,
 * 			resources and tasks.
 *  dag :	creates a workflow diagram of the pipeline. 
 * 			vertices in the graph represent the pipelineâ€™s 
 *  		processes and operators, while the edges represent 
 * 			the data dependencies (i.e. channels) between them.
 * timeline : 	creates execution timeline, displaying the 
 *  			execution-, waiting- and staging times.
*/
report {
    enabled = true
    file = "${params.resDir}/pipeline_info/execution_report.html"
    overwrite = true
    showTaskResources = true
    showTaskResourcesPercentage = true
}

timeline {
    enabled = true
    file = "${params.resDir}/pipeline_info/execution_timeline.html"
    overwrite = true
}

trace {
    enabled = true
    file = "${params.resDir}/pipeline_info/execution_trace.txt"
    overwrite = true
}

dag {
    enabled = true
    file = "${params.resDir}/pipeline_info/pipeline_dag.svg"
    overwrite = true
}
